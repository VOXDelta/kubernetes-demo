name: CI/CD Demo App

on:
  push:
    branches:
      - main

jobs:
  build-and-push:
    runs-on: self-hosted

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Login to private registry
      run: |
        docker login 192.168.1.171:5000 \
          -u "${{ secrets.REGISTRY_USER }}" \
          -p "${{ secrets.REGISTRY_PASSWORD }}"

    - name: Build Docker image
      run: |
        docker build \
          -t 192.168.1.171:5000/demo-ha/demo-app:dev \
          -t 192.168.1.171:5000/demo-ha/demo-app:sha-${GITHUB_SHA} \
          .

    - name: Push Docker image
      run: |
        docker push 192.168.1.171:5000/demo-ha/demo-app:dev
        docker push 192.168.1.171:5000/demo-ha/demo-app:sha-${GITHUB_SHA}
